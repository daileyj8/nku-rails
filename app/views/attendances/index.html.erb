<% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
<% end %>

<center><img src="http://www.adoptabeach.com/images/header-attendance.jpg" alt="attendance"></center>

<% @in1 = Student.in_seat(1, Date.today) %>
<% @in2 = Student.in_seat(2, Date.today) %>
<% @in3 = Student.in_seat(3, Date.today) %>
