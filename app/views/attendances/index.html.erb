<% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
<% end %>

<center><img src="http://www.adoptabeach.com/images/header-attendance.jpg" alt="attendance"></center>

<div class="date">
  <%=form_tag attendances_path, method:"get" do%>
    <%=date_field_tag("date", @date) %>
    <%=submit_tag "Confirm"%>
  <%end%>
</div>

    <%@in1 = Student.in_seat(1, @date)%>
    <%@in2 = Student.in_seat(2, @date) %>
    <%@in3 = Student.in_seat(3, @date) %>
    <%@in4 = Student.in_seat(4, @date) %>
    <%@absentStudents= Student.absent(@date) %>

<div class="tl">
<h2>Seat 1</h2>
<table rules= "rows" align="center">
  <tr>
    <th>Pic</th>
    <th>Nickname</th>
  </tr>
  
  <% @in1.each do |stu| %>
    <% email_address= (stu.email).downcase %>
    <tr>
      <td>
        <% if stu.image != ""%>
          <img src= <%= ab.image %> alt="image" height=100 width=100>
        <% elsif stu.email != ""%>
          <% hash = Digest::MD5.hexdigest(email_address) %>
          <img src=<%= "http://www.gravatar.com/avatar/#{hash}" %>>
        <% else %>
          <img src=<%="http://premium.wpmudev.org/blog/wp-content/uploads/2012/04/mystery-man-small.jpg" %> height=100 width=100>
        <% end %>
      </td>
      <td><%= stu.nickname %> </td>
    </tr>
  <%end%>
</table>
</div>

