<%@current= Student.find(@student) %>
<div id="navbar-container">
  <h1><%= @current.name %></h1>
</div>

<div id="navbar-container"> 
  <center><ul id="navbar">
    <li>
      <%= link_to "Seating Chart", students_path %>
    </li>
    <li>
      <%= link_to "All Attendances", attendances_path %>
    </li>
    <li>
      <a href="/students/show">Student Index</a>
    </li>
    <li>
      <%= link_to 'Edit Profile', edit_student_path(@current) %>
    </li>
  </ul></center>    
</div>

<table class="studentTable">
  <tr>
    <th>Pic</th>
    <th>Student Name</th>
    <th>Attended On</th>
    <th>Seat</th>
  </tr>
  <% @attendances.each do |attend| %>
    <% if attend.student_id == @student.to_i %>
      
      
      <% email_address= (@current.email).downcase %>
      <tr>
        <td>
        <% if @current.image != ""%>
          <img src= <%= @current.image %> alt="image" height=100 width=100>
        <% elsif @current.email != ""%>
          <% hash = Digest::MD5.hexdigest(email_address) %>
          <img src=<%= "http://www.gravatar.com/avatar/#{hash}" %>>
        <% else %>
          <img src=<%="http://premium.wpmudev.org/blog/wp-content/uploads/2012/04/mystery-man-small.jpg" %> height=100 width=100>
        <% end %>
        </td>
        <td><%= @current.name %></td>
        <td><%= attend.attended_on %></td>
        <td><%= attend.seat %></td>
      </tr>
    <%end%>
  <%end%>
  
</table>