<%= form_for @assignment do |f| %>
  
  <p>
    <%= f.label :student_id, "Select Student" %>
    <%= f.collection_select :student_id, Student.all, :id, :name, :prompt => true %>
  </p>
  <p>
    <%= f.label :name %><br >
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :score %><br >
    <%= f.text_field :score %>
  </p>

  <p>
    <%= f.label :total %><br >
    <%= f.text_field :total %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>